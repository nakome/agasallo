    <main>
        <header>
            <h1>Agasallo Settings</h1>
            <p>Back to the <a href="/" class="link">App</a></p>
        </header>
        <section>
            <fieldset>
                <legend>Import Json file</legend>
                <div class="form-group">
                    <input type="file" name="file" id="input-import" accept="application/json"/>
                </div>
                <div class="form-group">
                    <button type="button" id="btn-import" class="button button-info">Import</button>
                </div>
                <div id="import_msg"></div>
            </fieldset>

            <div class="divider"></div>

            <fieldset>
                <legend>Import from Url Beta</legend>
                <div class="form-group">
                    <input type="text" name="raw" id="rawUrl" placeholder="Url of raw json"/>
                    <button type="button" name="importRawUrl" id="importRawUrl" class="button button-info">Import Url</button>
                </div>
                <div id="import_url_msg"></div>
            </fieldset>

            <div class="divider"></div>

            <fieldset>
                <legend>Export to Json file</legend>
                <div class="form-group">
                    <button type="button" name="export" id="export" class="button button-info">Export data</button>
                </div>
            </fieldset>

        </section>
    </main>

